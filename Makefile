NAME = bsq

SRC = ./*.c

HDR = ./

all: $(NAME)

$(NAME):
	gcc -I $(HDR) -o $(NAME) $(SRC)

clean:
	rm -f $(NAME)

fclean: 
	rm -f $(NAME)

